<div class="row">
  <div class="col-md-10"><h4><%- title %></h4></div>
  <div class="col-md-2">
  <% if (user) { %>
      <a class="btn btn-primary" href="/posts/create">Create</a>
    <% } %>    
  </div>
</div>
<p>Welcome, <%= user?.uname || "Visitor" %></p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Vote</th>
      <th>Title</th>
      <th>Discription</th>
      <th>Creator</th>
    </tr>
  </thead>
  <tbody>        
    <% posts.forEach(post => { %>
      <tr>
        <td>
          <%- include('partials/voting.ejs', { "post": post, "votingItemCssClass": ""}) %>
        </td>
        <td>
          <a href="/posts/show/<%=post.id%>"><%= post.title %></a>
        </td>
        <td>
          <%= post.description %>          
        </td>          
        <td>
          <%= post.createdBy %>
        </td>        
      </tr>
      <% }) %>    
  </li>
</ul>
