<div class="row">
  <div class="col-md"><h4><%- title %></h4></div>
</div>
<div>
  <form action="/posts/delete/<%= post.id %>" method="POST">
    <div class="form-group">
      <p>Are you sure to delete this post "<%= post.title %>"</p>            
      <button type="submit" class="active btn btn-primary">Yes</button>
      <a class="btn btn-primary" href="/posts/show/<%= post.id %>">No</a>
    </div>
  </form>
</div>
